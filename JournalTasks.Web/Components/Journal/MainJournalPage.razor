@page "/journal"
@using JournalTasks.Web.Components.Journal.Tasks
@using Microsoft.AspNetCore.Authorization

@rendermode InteractiveServer
@attribute [Authorize]

<ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link active" id="code" data-bs-toggle="tab" data-bs-target="#code-tab" type="button"
                role="tab" aria-controls="code-tab" aria-selected="false" @onclick="UpdateFrom">Задачи</button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="comments" data-bs-toggle="tab" data-bs-target="#comments-tab" type="button"
                role="tab" aria-controls="comments-tab" aria-selected="false" @onclick="UpdateFrom">Тайм-трекер</button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="your-code-status" data-bs-toggle="tab" data-bs-target="#your-code-status-tab" type="button"
                role="tab" aria-controls="your-code-status-tab" aria-selected="true" @onclick="UpdateFrom">---</button>
    </li>
</ul>

<div class="tab-content">

    <div class="tab-pane fade show active" id="code-tab" role="tabpanel" aria-labelledby="code-tab">
        <TasksPage></TasksPage>
    </div>

    <div class="tab-pane fade" id="comments-tab" role="tabpanel" aria-labelledby="comments-tab">
        <TimeTracker></TimeTracker>
    </div>
    <div class="tab-pane fade" id="your-code-status-tab" role="tabpanel" aria-labelledby="your-code-status-tab">
        44
    </div>
</div> 


@code{
    private void UpdateFrom() {
        StateHasChanged();
    }
}